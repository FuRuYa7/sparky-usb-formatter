# It is based on the Copy to USB Tool
# Copyright 2009,2011 Tony Brijeski under the GPL V2

# get default's locale file
DEFLOCDIR="/usr/share/sparky/sparky-usb-formatter"
if [ "`cat /etc/default/locale | grep de_DE`" != "" ]; then
. $DEFLOCDIR/de
elif [ "`cat /etc/default/locale | grep es_AR`" != "" ]; then
. $DEFLOCDIR/es
elif [ "`cat /etc/default/locale | grep fr_FR`" != "" ]; then
. $DEFLOCDIR/fr
elif [ "`cat /etc/default/locale | grep it_IT`" != "" ]; then
. $DEFLOCDIR/it
elif [ "`cat /etc/default/locale | grep ja_JP`" != "" ]; then
. $DEFLOCDIR/ja
elif [ "`cat /etc/default/locale | grep pl_PL`" != "" ]; then
. $DEFLOCDIR/pl
elif [ "`cat /etc/default/locale | grep pt_BR`" != "" ]; then
. $DEFLOCDIR/pt_BR
elif [ "`cat /etc/default/locale | grep pt_PT`" != "" ]; then
. $DEFLOCDIR/pt
elif [ "`cat /etc/default/locale | grep sv_SE`" != "" ]; then
. $DEFLOCDIR/se
else
. $DEFLOCDIR/en
fi

DIALOG="`which yad` --width 400"
TITLE="--always-print-result --dialog-sep --window-icon=usb-creator --image=usb-creator --title="
TITLETEXT="$LOCAL1"
TEXT="--text="
OKBUTTON="--button=Ok:0 "

testroot="`whoami`"

if [ "$testroot" != "root" ]; then
	echo "Must be root, exiting now..."
	exit 1
fi

formatmenu () {
if [ "$1" = "" ]; then
	$DIALOG $TITLE"$TITLETEXT" $TEXT"\n$LOCAL2"
	mainmenu
fi

$DIALOG $TITLE"$TITLETEXT" $TEXT"\n$LOCAL3"

if [ $? != 0 ]; then
	mainmenu
fi

umount `mount | grep $1 | awk '{print $1}'`

# format now
$DIALOG $TITLE"$TITLETEXT" $TEXT"$LOCAL4" --no-buttons --progress --pulsate --auto-close --auto-kill &

mkfs.fat -F 32 -I -n USBDISK -v /dev/$1
sleep 1
killall -KILL yad

$DIALOG $TITLE"$TITLETEXT" $TEXT"\n$LOCAL5" $OKBUTTON

exit 0
}

mainmenu () {
DEVS=""
DEVS=`ls -l /dev/disk/by-path/*usb* | awk -F "/" ' ! /part/ {print $NF}'`
if [ "$DEVS" != "" ]; then
	for i in $DEVS; do
	USBDRIVESIZE=`grep -m 1 "$i" /proc/partitions | awk '{print $3}'`
	USBDRIVES="$USBDRIVES!$i-$USBDRIVESIZE"
	done
else
	$DIALOG $TITLE"$TITLETEXT" $OKBUTTON $TEXT"\n$LOCAL6"
	exit 0
fi

CHOICES=`$DIALOG $TITLE"$TITLETEXT" --form --field="$LOCAL7:CB" $USBDRIVES --button="$LOCAL8:2" --button="$LOCAL9:1"`
ret="$?"

if [ "$ret" = "1" ]; then
	USBDRIVE=`echo $CHOICES | cut -d "|" -f 1 | cut -d "-" -f 1`
	formatmenu $USBDRIVE
else
	exit 0
fi
}

mainmenu
